<mvc:View
	controllerName="project1.controller.Table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:fiori="sap.ui.webc.fiori"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Table id="idProductsTable"
		inset="false"
        items="{invoice>/}">
		<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar1">
				<content>
				<Title id="_IDGenTitle1" text="Banco" level="H2"/>
				<SearchField id="searchField" width="20%" placeholder="Hola" liveChange=".onSearch"/>	
							</content>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar2">
				<Label id="_IDGenLabel2" text="Transanciones Bancarias"/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column id="_IDGenColumn1"
				width="12em">
				<Text id="_IDGenText6" text="Cod.De transacci贸n" />
			</Column>
			<Column id="_IDGenColumn2"
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text id="_IDGenText5" text="Fecha de transacci贸n" />
			</Column>
			<Column id="_IDGenColumn3"
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text id="_IDGenText4" text="Descripci贸n" />
			</Column>
			<Column id="_IDGenColumn4"
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text id="_IDGenText7" text="Tipo de transacci贸n" />
			</Column>
			<Column id="_IDGenColumn5"
				hAlign="End">
				<Text id="_IDGenText1" text="Monto" />
			</Column>
		</columns>
		<items>
			<ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle">
				<cells>
					<Text id="_IDGenTextC1" text="{invoice>OrderID}" />
					<Link text="{invoice>Date}" target="{invoice>OrderID}" press="downloadPDF" id="link1"/>
					<Text id="_IDGenTextC3" text="{invoice>Descripcion}" />
					<Text id="_IDGenTextC4" text="{invoice>TypeTrans}" />

					<ObjectNumber id="_IDGenObjectNumber1"
						number="{invoice>Monto}"
						state="{
							parts: [
								{path: 'invoice>Monto'},
								{path: 'invoice>TypeTrans'}
							],
							formatter: 'project1.controller.Formatter.weightState'
						}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>